<Window x:Class="Ahmed.Views.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ahmed.Views"
        mc:Ignorable="d"
        Title="SignUp" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="text" TargetType="TextBlock">
            <Setter Property="Background" Value="Transparent" ></Setter>
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="FontWeight" Value="ExtraBold"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="250"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border 
                        Background="Transparent" 
                        BorderThickness="3" 
                        BorderBrush="Black" 
                        CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"></ScrollViewer>
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Width" Value="250"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderThickness" Value="3" ></Setter>
            <Setter Property="BorderBrush" Value="Black" ></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border
                         Background="Transparent" 
                         BorderThickness="3" 
                         BorderBrush="Black" 
                         CornerRadius="12"
                        >
                            <ScrollViewer x:Name="PART_ContentHost"></ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="btn" TargetType="Button">
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontWeight" Value="ExtraBold"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                        Background="Black"
                         CornerRadius="12" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Content="{TemplateBinding Content}"></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="#FF7A30" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <TextBlock  FontSize="25" TextAlignment="Center" FontWeight="ExtraBold" Text="Welcome" Height="49" Width="140"/>
        </StackPanel>
        <Border CornerRadius="15"  Width="325" Height="300" Background="Wheat"  Grid.Column="1" Grid.Row="1">
            <StackPanel Width="325" Height="300" Background="Transparent"  Grid.Column="1" Grid.Row="1" >
                <Grid Height="374">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel  Width="350" Height="300"  Grid.Row="0" Margin="0,10" Grid.RowSpan="4" >
                        <TextBlock  Style="{StaticResource text}" Width="250" Text="" ></TextBlock>
                        <TextBox></TextBox>
                        <TextBlock Style="{StaticResource text}" Width="250" Text="Passwrod:" ></TextBlock>
                        <PasswordBox></PasswordBox>
                    </StackPanel>
                    <Border  Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Button Click="Log_in" Padding="3" Style="{StaticResource btn}"  Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Login" Height="22" Width="50"></Button>
                    </Border>

                    <Button Style="{StaticResource btn}" Click="Sign_Up" Content="SignUp" VerticalAlignment="Top" Grid.Row="3" Width="120" Height="30"></Button>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
